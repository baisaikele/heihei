<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/title_bar" >
    </include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_1px"
        android:background="@color/hh_color_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/t120dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_ticker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textColor="#fffaec81"
                android:textSize="@dimen/t30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:text="@string/user_account_bill"
                android:textColor="#ffa5acb2"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_1px"
        android:background="@color/hh_color_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/t166dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <com.base.widget.MoneyTextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#b3f99b"
                android:textSize="@dimen/t48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_money"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/t4dp"
                android:layout_toRightOf="@id/tv_money"
                android:text="@string/money"
                android:textColor="#ffb3bdc7"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_money"
                android:layout_centerHorizontal="true"
                android:text="@string/cash_withdrawal_amount"
                android:textColor="#ffa9b4b8"
                android:textSize="@dimen/t12dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_1px"
        android:background="@color/hh_color_line" />

    <Button
        android:id="@+id/btn_exchange"
        android:layout_width="192dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/t118dp"
        android:background="@drawable/shape_tag_record_black"
        android:text="@string/frances"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_withdraw"
        android:layout_width="192dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/t15dp"
        android:background="@drawable/btn_login_selector"
        android:text="@string/user_account_withdrawals"
        android:textColor="@color/btn_login_text_color_selector"
        android:textSize="16dp" />

</LinearLayout>