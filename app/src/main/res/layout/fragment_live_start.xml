<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/title_bar" >
    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t15dp"
        android:layout_marginTop="@dimen/t15dp"
        android:text="@string/create_live_topic"
        android:textColor="@color/hh_color_b"
        android:textSize="@dimen/t14dp" />

    <EditText
        android:id="@+id/et_topic"
        style="@style/EditText_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t40dp"
        android:layout_marginTop="@dimen/t10dp"
        android:layout_marginLeft="@dimen/t15dp"
        android:layout_marginRight="@dimen/t15dp"
        android:background="@drawable/shape_solid_1b1e20_corner_4"
        android:hint="@string/create_live_title"
        android:paddingLeft="@dimen/t15dp"
        android:paddingRight="@dimen/t15dp"
        android:singleLine="false" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/btn_sina"
            android:layout_width="@dimen/t44dp"
            android:layout_height="@dimen/t44dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_share_weibo"
            />
        
        <ImageView 
            android:id="@+id/btn_wx"
            android:layout_width="@dimen/t44dp"
            android:layout_height="@dimen/t44dp"
            android:layout_marginLeft="@dimen/t31dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_share_wechat"
            />
        
        <ImageView 
            android:id="@+id/btn_wx_friend"
            android:layout_width="@dimen/t44dp"
            android:layout_height="@dimen/t44dp"
            android:layout_marginLeft="@dimen/t31dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_share_wechat_friend"
            />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_share_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/t10dp"
        android:textColor="@color/hh_color_b"
        android:textSize="@dimen/t12dp"
        android:text="点击开始后会分享到微博"/>
    
    <Button 
        android:id="@+id/btn_start"
        android:layout_width="@dimen/t200dp"
        android:layout_height="@dimen/t44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/t46dp"
        android:background="@drawable/btn_login_selector"
        android:textColor="@color/hh_color_d"
        android:textSize="16dp"
        android:text="@string/start"/>
    
</LinearLayout>