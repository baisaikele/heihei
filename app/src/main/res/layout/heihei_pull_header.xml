<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp" >

    <LinearLayout 
        android:id="@+id/ll_pull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView 
            android:id="@+id/head_top"
            android:layout_width="66.67dp"
            android:layout_height="19dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pull_loading_top"/>
        <ImageView 
            android:id="@+id/head_mid"
            android:layout_width="66.67dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/pull_loading_mid"
            android:visibility="gone"/>
        <ImageView 
            android:id="@+id/head_bottom"
            android:layout_width="66.67dp"
            android:layout_height="12.67dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pull_loading_bottom"/>
    </LinearLayout>

