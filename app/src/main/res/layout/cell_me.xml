<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/full_transparent"
    android:orientation="vertical" >
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/t57dp"
        >
        <ImageView 
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/t18dp"
            android:layout_height="@dimen/t18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/t15dp"/>
        
        <TextView 
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_marginLeft="@dimen/t12dp"
            android:textColor="@color/hh_color_a"
            android:textSize="@dimen/t15dp"
            android:text="@string/user_mine_live"
            />
        
        <TextView 
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/t15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/hh_color_b"
            android:textSize="@dimen/t14dp"
            android:text="0"/>
        
        <ImageView 
            android:id="@+id/iv_right_arrow"
            android:layout_width="@dimen/t18dp"
            android:layout_height="@dimen/t18dp"
            android:src="@drawable/hh_me_enter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_30px"/>
        
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_1px"
        android:layout_marginLeft="@dimen/t14dp"
        android:background="@color/hh_color_line"/>
</LinearLayout>