<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/danmaku_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/msg_scroll_item_marginTop"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/msg_scroll_item_SpacingExtra"
        android:paddingLeft="@dimen/t15dp"
        android:text="asdsadsadsadasd"
        android:textColor="@color/hh_color_g"
        android:textSize="@dimen/t15dp" />

    <ImageView
        android:id="@+id/danmaku_icon"
        android:layout_width="@dimen/t18dp"
        android:layout_height="@dimen/t18dp"
        android:layout_marginTop="@dimen/msg_scroll_item_marginTop"
        android:layout_marginLeft="@dimen/t4dp"
        android:layout_marginRight="@dimen/t15dp"
        android:scaleType="fitXY"
        android:visibility="gone" />

</LinearLayout>