<com.heihei.cell.HomeHeader xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.base.widget.RoundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t10dp"
        android:layout_marginRight="@dimen/t10dp"
        app:corner_radius_all="@dimen/t22dp" >

        <com.base.widget.CustomGallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t150dp" >
        </com.base.widget.CustomGallery>
    </com.base.widget.RoundFrameLayout>

</com.heihei.cell.HomeHeader>