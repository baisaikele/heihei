<?xml version="1.0" encoding="utf-8"?>
<com.heihei.cell.LiveCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/pm_item_height"
    android:background="@color/full_transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_live_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_solid_1f2326_corner_18" >
	
        <com.heihei.fragment.live.widget.AvatarImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/pm_user_head_size"
            android:layout_height="@dimen/pm_user_head_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            fresco:roundAsCircle="true" >
        </com.heihei.fragment.live.widget.AvatarImageView>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/t12dp"
            android:layout_marginTop="@dimen/t15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="2016.8.15"
                style="@style/tv_b_20"
                />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/t20dp"
                android:text="0äºº"
                style="@style/tv_b_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/ll_right"
            android:layout_toRightOf="@id/iv_avatar"
            android:gravity="left|center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                 style="@style/tv_a_28"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t3dp"
                android:singleLine="true"
                 android:ellipsize="end"
                android:text=""
                 style="@style/tv_a_28" />
        </LinearLayout>
    </RelativeLayout>

</com.heihei.cell.LiveCell>