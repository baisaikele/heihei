<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/full_transparent" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/t8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp" >

        <TextView
            style="@style/tv_c_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_proxy_tip_start" />

        <TextView
            android:id="@+id/tv_tip"
            style="@style/tv_c_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_proxy_tip_information" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/information"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/t8dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/btn_login"
            android:layout_width="@dimen/t139dp"
            android:layout_height="@dimen/t51dp"
            android:background="@drawable/shape_btn_login_stoke_white"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/t24dp"
                android:layout_height="@dimen/t24dp"
                android:src="@drawable/hh_register_tel" />

            <TextView
                style="@style/tv_a_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/login_mobile_phone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_wx"
            android:layout_width="@dimen/t51dp"
            android:layout_height="@dimen/t51dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/bg_login_wechat"
            android:scaleType="centerInside"
            android:src="@drawable/hh_register_wechat" />

        <ImageView
            android:id="@+id/btn_sina"
            android:layout_width="@dimen/t51dp"
            android:layout_height="@dimen/t51dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/bg_login_weibo"
            android:scaleType="centerInside"
            android:src="@drawable/hh_register_weibo" />
    </LinearLayout>

    <com.base.widget.IndicationView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" >
    </com.base.widget.IndicationView>

</RelativeLayout>