    <RelativeLayout
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t52dp">

        <TextView
            style="@style/tv_a_31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/t15dp"
            android:text="@string/setting_about" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/t15dp"
            android:src="@drawable/hh_me_enter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/t15dp"
            android:background="@color/hh_color_fg" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_unlogin"
            android:layout_width="@dimen/t200dp"
            android:layout_height="@dimen/t44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/t50dp"
            android:background="@drawable/shape_dissmiss"
            android:text="@string/user_exit_login"
            android:textColor="@color/hh_color_a"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>